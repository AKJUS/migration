          - MYSQL_DATABASE=my-db
          - MYSQL_ROOT_PASSWORD=$password
        redis:
          image: redis:3.2
          resources:
            limits:
              memory: 128M

      EOF
    - echo 'should be able to connect to MySQL'
    - echo 'should be able to connect to redis'
    plugins:
