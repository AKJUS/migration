---
steps:
- commands:
  - "# No need for checkout, the agent takes care of that"
  - "# Attaching workspace at ./workspace"
  - export DOCKER_BUILDKIT=1
  - "# Linting Dockerfile (treating warnings as errors)"
  - docker pull user/app:cache || true
  - docker pull user/app2:cache2 || true
  - docker buildx build -f ./docker/Dockerfile.prod -t my.registry.io/myapp:v1.0 -t
    my.registry.io/myapp:$CIRCLE_SHA1 -t my.registry.io/myapp:latest --cache-from=user/app:cache,user/app2:cache2
    --cache-to=user/app:cache --load --build-arg VERSION=1.0 --build-arg ENV=prod
    .
  plugins:
  - docker#v5.10.0:
      image: cimg/base:stable
  agents:
    executor_type: docker
  key: build
- commands:
  - "# No need for checkout, the agent takes care of that"
  - docker build -f ./Dockerfile -t docker.io/myapp:latest .
  plugins:
  - docker#v5.10.0:
      image: cimg/base:stable
  agents:
    executor_type: docker
  key: build-simple
